@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<WebsiteBanSach.Models.NhaXuatBan>
@{
    ViewBag.Title = "Publishers";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<style>
    .menuTrang {
        list-style: none;
        margin: 0;
        padding: 0;
        text-align: center;
    }

        .menuTrang li {
            display: inline;
            border: 1px solid black;
            border-radius: 8px;
            width: 40px;
            text-align: center;
            color: white;
            margin-left: 0.8%
        }

    li.active {
        color: white;
        background-color: darkseagreen
    }

    .table {
        border-collapse: separate;
        border-spacing: 0;
        background-color: #EEEEEE;
    }

    tr {
        justify-self: center;
        text-align: center;
    }

    table.striped > tbody > tr > td:first-child {
        border-radius: 10px 0 0 10px;
    }

    table.striped > tbody > tr > td:last-child {
        border-radius: 0 10px 10px 0;
    }

    .table-item {
        border-radius: 1.2rem;
        background-color: white;
    }

    .grid {
        display: grid;
        grid-template-columns: auto auto;
        margin-bottom: 15px;
    }

    .grid-item {
        padding-right: 20px;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        padding-top: 100px;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0, 0, 0);
        background-color: rgba(0, 0, 0, 0.4);
    }

    .modal-content {
        margin: 0 auto;
        width: 50%;
        position: relative;
        display: flex;
        flex-direction: column;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid rgba(0, 0, 0, .2);
        border-radius: .3rem;
        outline: 0;
    }

    .modal-body {
        padding: 1rem;
    }

    .modal-footer {
        display: flex;
        border-top: 1px solid #aaaaaa;
        padding: 1rem;
        flex-direction: row;
        justify-content: flex-end;
        border-top: 1px solid #aaaaaa;
        padding: 1rem;
    }

        .modal-footer > :not(:first-child) {
            margin-left: .25rem;
        }

    .btn {
        cursor: pointer;
        outline: none;
        font-weight: 400;
        line-height: 1.25;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        border: 1px solid transparent;
        padding: .5rem 1rem;
        font-size: 1rem;
        border-radius: .25rem;
        transition: all .2s ease-in-out;
    }

    .btn-secondary {
        color: #292b2c;
        background-color: #fff;
        border-color: #ccc;
    }

    .btn-primary {
        color: #fff;
        background-color: #0275d8;
        border-color: #0275d8;
    }

    .modal-header {
        align-items: center;
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid #aaaaaa;
        padding: 1rem;
    }

    h5.modal-title {
        font-size: 1.5rem;
    }

    .close {
        color: #aaaaaa;
        font-size: 28px;
        font-weight: bold;
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
    }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }

    .display-form {
        padding-top: 30px;
        padding-bottom: 30px;
        background-color: white;
        border-radius: 20px
    }

    .btn-trash {
        display: none;
    }

    .table-item:hover {
        background-color: cornflowerblue;
        color: white;
        font-weight: bold
    }
</style>

<body>
    <div class="grid">
        <div class="grid-item">
            <form class="app-search-form" method="post" style="width:auto">
                <input type="text" placeholder="Search publisher name..." id="txtTimKiemAd" name="txtTimKiemAd" class="form-control search-input" onkeyup="SearchByColumn(2)">
                <button style="margin-top:5px;margin-bottom:5px" type="submit" class="btn search-btn btn-primary" value="Search"><i class="fas fa-search"></i></button>
            </form>
        </div>
        <div class="grid-item">

        </div>
    </div>
    <div class="display-form">
        <div style="margin-left:50px;margin-right:50px">
            <button type="button" class="btn btn-success" style="color:white" onclick="location.href='@Url.Action("Create", "Publisher")'">
                <i class="fa-solid fa-plus" style="margin-right:5px"></i>Add Publisher
            </button>

            <hr />
            <span style="margin:10px">@ViewBag.Count </span>
            <button type="button" class="btn btn-trash" style="color:red; background-color:pink;margin:10px" onclick="DeleteSelected()">
                <i class="fa-solid fa-trash" style="margin-right:5px"></i>Delete Seleted
            </button>
        </div>

        <table class="table" id="table">
            <colgroup>
                <col width="5" span="1">
                <col width="40" span="1">
                <col width="270" span="1">
                <col width="100" span="1">
                <col width=20 span="1">
                <col width=80 span="1">
            </colgroup>
            <tr class="table-secondary table-bordered">
                <th>
                    <input type="checkbox" id="checkall" onclick="SelectAll()">
                </th>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Phone
                </th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr class="table-item" onclick="return location.href='@Url.Action("Edit",new {@maNXB=item.MaNXB})'">
                    <td>
                        <input type="checkbox" class="check-item" id="@item.MaNXB">
                    </td>

                    <td style="text-align:center">

                        @Html.DisplayFor(modelItem => item.MaNXB)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenNXB)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DienThoai)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit",new { @maNXB = item.MaNXB })">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                        </a> |
                        <a href="@Url.Action("DeleteConfirmed",new { @maNXB = item.MaNXB })" onclick="return confirm('Are you sure want to delete this publisher?')">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                            </svg>
                        </a>


                    </td>
                </tr>
            }


        </table>
    </div>
</body>
@*Tao link lien ket caca trang *@
<center>
    <p><b>Trang</b> @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</p>
    <div class="menuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
</center>

<script>
                    var table = document.getElementById("table");
                    var input = document.getElementById("txtTimKiemAd");
                    var tr = table.getElementsByTagName("tr");

                    var myArray = [];
                     @foreach (var item in Model)
                            {
                                @:myArray.push('@item.MaNXB');
                            }
                    console.log(myArray);
                    var checkAll = document.getElementById("checkall");

                    //Chọn tất cả item
                    function SelectAll() {

                        if (checkAll.checked == true) {

                            myArray.forEach(checkItemTrue);
                            document.getElementsByClassName("btn btn-trash")[0].style.display = "inline";
                        }
                        else {
                            myArray.forEach(checkItemFalse);
                            document.getElementsByClassName("btn btn-trash")[0].style.display = "none";
                        }
                    }

                    // Bật check
                    function checkItemTrue(item) {
                        var check = document.getElementById(item);
                        check.checked = true;
                    }
                    //Tắt check
                    function checkItemFalse(item) {
                        var check = document.getElementById(item);
                        check.checked = false;
                    }
                    function DeleteSelected() {

                        if (confirm("Bạn có chắc chắn xóa " + GetSelected().length + " sản phẩm đã chọn?") == true) {
                            GetSelected().forEach(deleteitem);
                          // Session["Delete"]= GetSelected() as List<int>());
                            return location.href = '/Product/Index';
                        }

                    }
                    // Lấy những item được chọn
                    var list=[] ;
                    function GetSelected() {
                        list = [];
                        myArray.forEach(Add);
                        return list;
                    }
                    function Add(item) {
                        if (document.getElementById(item).checked == true)
                            list.push(item);
                    }
                    function deleteitem(item) {
                        return location.href = '/Product/DeleteAll/"2"';
                    }
                    function SearchByColumn(num) {
                        var filter, td, i, txtValue;
                        filter = input.value.toUpperCase();


                        for (i = 0; i < tr.length; i++) {
                            td = tr[i].getElementsByTagName("td")[num];
                            if (td) {
                                txtValue = td.innerText;
                                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                                    tr[i].style.display = "";
                                } else {
                                    tr[i].style.display = "none";
                                }
                            }
                        }
                    }
</script>
