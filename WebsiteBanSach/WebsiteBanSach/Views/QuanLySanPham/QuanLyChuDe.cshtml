@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<WebsiteBanSach.Models.ChuDe>

@{
    ViewBag.Title = "QuanLyChuDe";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
<style>
    .menuTrang {
        list-style: none;
        margin: 0;
        padding: 0;
        text-align: center;
    }

        .menuTrang li {
            display: inline;
            border: 1px solid black;
            border-radius: 8px;
            width: 40px;
            text-align: center;
            color: white;
            margin-left: 0.8%
        }

    li.active {
        color: white;
        background-color: darkseagreen
    }

    tr {
        text-align: center
    }
</style>
<h2 style="text-align:center;padding-bottom:2%">Quản Lý Chủ Đề</h2>

<p>
    @Html.ActionLink("Thêm Chủ Đề", "ThemChuDe")
</p>
<table class="table table-bordered table-sm">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaChuDe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TenChuDe)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaChuDe)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenChuDe)
    </td>
    <td>
        @Html.ActionLink("Chỉnh Sửa", "ChinhSuaChuDe", new { @MaChuDe = item.MaChuDe }) |
        @Html.ActionLink("Xóa", "XoaChuDe", new { @MaChuDe = item.MaChuDe })
    </td>
</tr>
    }

</table>
@*Tao link lien ket caca trang *@
<center>
    <p><b>Trang</b> @(Model.PageCount<Model.PageNumber?0:Model.PageNumber) / @Model.PageCount</p>
    <div class="menuTrang">
        @Html.PagedListPager(Model, page => Url.Action("QuanLyChuDe", new { page = page }))
    </div>
</center>
