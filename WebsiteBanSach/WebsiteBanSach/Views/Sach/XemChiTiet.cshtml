<section>
    <div class="header">
        <p class="menu-mini">
            @Model.ChuDe.TenChuDe<i class="fa fa-angle-right" aria-hidden="true" style="width: 20px; text-align: center"></i>
            @Model.TenSach.ToString()
        </p>
    </div>
    <div>
        <div class="box_detail">
            @*<center>*@
            <div class="img-name-box">
                <div class="div-box-detail">
                    <img src="@Url.Content("~/ImgProducts/" + Model.AnhBia)" id="img-book" class="img">

                    <div style="height:fit-content; line-height:45px; margin-left:75px; margin-top:25px" class="div-description">
                        <b style="font-family:'Poppins', sans-serif; font-size:35px; width:fit-content; height:fit-content">
                            @Model.TenSach
                        </b>
                        <br />

                        <span><b style="width:fit-content ;height:fit-content">Chủ đề:</b> @ViewBag.TenChuDe</span>
                        <br />

                        <b style="width: fit-content; height: fit-content">Nhà Xuất Bản:</b> @ViewBag.TenNXB

                        <p class="p-price"> @string.Format("{0:0,0}", Model.GiaBan)&nbsp;<u style="text-decoration:none">đ</u></p>
                        @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMaSach = Model.MaSach, @strUrl = Request.Url.ToString() }))
                        {
                            <span class="btn btn-primary" style="width:140px;height:40px; background-color:coral;text-align:center; border:0px">
                                <i class="fa fa-shopping-cart"></i>
                                <input type="submit" value=" Mua Hàng" style="background-color:coral; border:none; color:white">
                            </span>
                        }
                    </div>

                </div>
                <h5 style="margin-left: 9%; margin-top: 30px; font-weight:bold">Thông tin sản phẩm</h5>
                <div class="table-description">

                    <ul style="list-style-type:none">
                        <li>Mã sách</li>
                        <li>Tác giả</li>
                        <li>Nhà xuất bản</li>
                    </ul>
                    <ul style="list-style-type:none">
                        <li>@Model.MaSach</li>
                        <li>@Model.TenSach</li>
                        <li>@Model.NhaXuatBan.TenNXB</li>
                    </ul>
                </div>
                <div style="width: 900px; border-top: 1px solid #00000038; margin-left: 9%;"></div>
                <p class="p-desciption">
                    @Model.MoTa
                </p>
            </div>
        </div>
    </div>
    <br />
</section>
