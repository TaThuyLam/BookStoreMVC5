@using WebsiteBanSach.Models;
@model List<Sach>

@{
    ViewBag.Title = "SachTheoChuDe";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<style>
    .product_section .box .img-box {
        background-color: white;
        /*height:fit-content;*/
        height: 225px;
    }

    .row {
        /*width:90%;
        margin-left:100px;*/
        /* background-color:white;*/
    }

    .product_info {
        justify-content: center;
    }

    #item-product {
        /*border: 1px solid #00000021;*/
        padding: 0px;
        height: 320px;
    }

    .label-tenSach {
        height: 50px;
        font-weight: bold;
        margin: 5px;
        display: flex;
        justify-content: center;
    }

    .img-box {
        padding-bottom: 0px;
        padding-left: 0px;
        padding-right: 0px;
    }

    .item1 {
        grid-area: header;
        margin-left: 60px;
        margin-right: 60px;
    }

    .item2 {
        grid-area: menu;
        width: 190px;
        margin-left: 60px;
        /*margin-right: 60px;*/
    }

    .item3 {
        grid-area: main;
    }

    .grid-container {
        display: grid;
        grid-template-areas:
            'header header header header header header'
            'menu menu main main main main';
        gap: 10px;
        margin-top: 20px;
        /*background-color: #e7e7e790;*/
        padding: 10px;
    }

        .grid-container > div {
            background-color: rgba(255, 255, 255, 0.8);
            text-align: center;
            padding: 20px 0;
            font-size: 18px;
        }

    #filter {
        width: 255px;
        border-right: 1px solid #3a446836;
    }

    #item-main {
        padding-top: 0px;
        width: 1148px;
        /*border: 1px solid #3a446836;*/
    }

    #main {
        background-color: white;
    }

    .label-cate {
        font-size: 22px;
        font-weight: bold;
        text-align: start;
        margin-left: 0px;
        margin-bottom: 5px;
    }
    .item2 {
        grid-area: menu;
        width: 190px;
        margin-left: 60px;
        /*margin-right: 60px;*/
    }

    #item-Sach:hover {
        box-shadow: 10px 1px 30px 1px #e8e8e8;
        transition: transform .5s;
        /*border: 1px solid black;*/
    }
</style>
@if (Model.Count == 0)
{
    <h1>@ViewBag.Sach</h1>
}

