@using WebsiteBanSach.Models;
@model List<ChuDe>

@{
    ViewBag.Title = "DanhMucChuDe";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<section style="padding:15px">
    <div>
        <center>
            <p>
                @{
                    int i = 0;
                    foreach (var item in Model)
                    {
                        <span>
                            <a href="@Url.Action("SachTheoChuDe",new {@machude = item.MaChuDe })" class="btn btn-primary">@item.TenChuDe</a>
                            &nbsp; &nbsp; &nbsp; &nbsp;
                        </span>
                        i += 1;
                        if (i == 4 || i % 8 == 0)
                        {
                            <br /><br />
                        }

                    }
                }
            </p>
        </center>
    </div>
</section>


