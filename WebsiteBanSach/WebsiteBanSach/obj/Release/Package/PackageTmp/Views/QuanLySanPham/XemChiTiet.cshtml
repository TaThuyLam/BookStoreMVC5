@model IEnumerable<WebsiteBanSach.Models.ChiTietDonHang>

@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
<style>
    tr {
        text-align: center;
    }
</style>
<h2 style="text-align:center">Xem Chi Tiết</h2>


<table class="table table-bordered table-sm">
    <colgroup>
        <col width="200" span="1">
        <col width="200" span="1">
        <col width=200 span="1">



    </colgroup>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sach.TenSach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sach.AnhBia)
        </th>
        <th>
            Số Lượng
        </th>
        <th>
            Đơn Giá
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sach.TenSach)
            </td>
            <td>
                <img src="@Url.Content("~/ImgProducts/" + item.Sach.AnhBia)" width="70" height="100">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>

        </tr>
    }
   
</table>
